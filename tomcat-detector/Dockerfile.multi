# First Stage
FROM debian:buster
RUN apt update && \
      apt install -y curl && \
      curl -LO https://storage.googleapis.com/kubernetes-release/release/`curl -s https://storage.googleapis.com/kubernetes-release/release/stable.txt`/bin/linux/amd64/kubectl && \
      chmod +x ./kubectl

# Second Stage
FROM golang:1.13.12

LABEL \
    version="beta" \
    description="Script that watches for events concerning the creation and removal of tomcat pods" \
    architecture="x86_64"

RUN useradd user && mkdir tomcat-detector && chmod -R 777 tomcat-detector/



COPY --from=0 /kubectl /usr/local/bin/kubectl
COPY "main.go" "go.mod" "go.sum" /tomcat-detector/
WORKDIR /tomcat-detector/
RUN go build

USER user

# CMD ["go", "run", "/tomcat-detector/main.go"]
CMD ["./tomcat-detector"]
